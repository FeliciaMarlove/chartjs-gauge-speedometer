{
  "name": "chartjs-gauge-v3",
  "description": "Gauge chart for chart.js v3",
  "homepage": "https://github.com/uk-taniyama/chartjs-gauge/",
  "version": "3.0.0-alpha.1",
  "licence": "MIT",
  "jsdelivr": "dist/chartjs-gauge.min.js",
  "unpkg": "dist/chartjs-gauge.min.js",
  "main": "dist/chartjs-gauge.js",
  "keywords": [
    "chartjs",
    "chart.js",
    "chart",
    "charts",
    "gauge"
  ],
  "files": [
    "dist/**",
    "samples/**",
    "CHANGELOG.md",
    "README.md",
    "index.html",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uk-taniyama/chartjs-gauge"
  },
  "bugs": {
    "url": "https://github.com/uk-taniyama/chartjs-gauge/issues"
  },
  "dependencies": {
    "chart.js": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@rollup/plugin-json": "^4.1.0",
    "chartjs-test-utils": "^0.4.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "highlight.js": "^11.6.0",
    "http-browser": "^0.1.31",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^4.0.2",
    "karma-jasmine-html-reporter": "^1.4.2",
    "karma-junit-reporter": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.8",
    "karma-spec-reporter": "^0.0.34",
    "marked": "^4.0.19",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.37",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-istanbul": "^3.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "yargs": "^17.5.1"
  },
  "scripts": {
    "prepublishOnly": "npm-run-all -s clean t build:docs build",
    "clean": "rimraf dist test-result",
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "build:docs": "node src/tools/mkdocs.js",
    "lint": "eslint src",
    "start": "npm-run-all server build:watch",
    "server": "http-server .",
    "t": "karma start karma.conf.js --single-run --coverage --browsers chromeheadless",
    "test": "karma start karma.conf.js",
    "test:html": "karma start karma.conf.js --reporters progress,kjhtml",
    "clean-chartjs": "rimraf modules/chart.js",
    "clone-chartjs": "git clone --branch v3.1.0 --depth 1 https://github.com/chartjs/Chart.js.git modules/chart.js"
  }
}
